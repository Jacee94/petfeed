
<div class="border-4 border-black border-solid">
  
{{#each posts as |post|}}
  <div class='post-card'>
    <header>
        <h2>
          {{post.title}}
        </h2>
      </header>

    <p>Posted by
      {{post.user.pet_name}},
      {{post.user.species}},
      {{post.user.breed}}
      on
      {{post.date_created}}</p>
    <p>{{post.description}}</p>
  </div>
{{/each}}
</div>