{{#each posts as |post|}}
  <div class='post-card'>
    <header class='post-title'>{{post.title}}</header>
    <p>Posted by
      {{post.user.pet_name}},
      {{post.user.species}},
      {{post.user.breed}}
      on
      {{post.date_created}}</p>
    <p>{{post.description}}</p>
  </div>
{{/each}}