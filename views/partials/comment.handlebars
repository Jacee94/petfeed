<section class='comments-section'>
  {{#each post.comments as |comment|}}
    <h4 class='comment-body'>{{comment.text}}</h4>
    <hr />
    <p class='comment-details'>Posted:
      {{format_date comment.createdAt}}
      <i>By:
        {{comment.user.user_name}}</i></p>
    <hr />
  {{/each}}
</section>